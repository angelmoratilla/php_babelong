{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - Babelong{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <h1>Iniciar Sesión</h1>
        <p class="subtitle">Accede a tu cuenta de Babelong</p>
        
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="_username" class="form-control" value="{{ last_username }}" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="_password" class="form-control" required>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" name="_remember_me"> Recordarme
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
        </form>
        
        <div class="auth-footer">
            <p>¿No tienes cuenta? <a href="{{ path('app_register') }}">Regístrate aquí</a></p>
            <p><a href="{{ path('app_landing') }}">Volver al inicio</a></p>
        </div>
    </div>
</div>

<style>
.auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
}

.alert {
    padding: 12px 15px;
    border-radius: 5px;
    margin-bottom: 20px;
}

.alert-danger {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
}

.auth-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    padding: 40px;
    max-width: 400px;
    width: 100%;
}

.auth-card h1 {
    text-align: center;
    color: #333;
    margin-bottom: 10px;
}

.subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 30px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    color: #333;
    font-weight: 500;
}

.form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    transition: border-color 0.3s;
}

.form-control:focus {
    outline: none;
    border-color: #667eea;
}

.checkbox {
    display: flex;
    align-items: center;
    font-weight: normal;
}

.checkbox input {
    margin-right: 8px;
}

.btn-block {
    width: 100%;
}

.auth-footer {
    margin-top: 30px;
    text-align: center;
}

.auth-footer p {
    margin: 10px 0;
    color: #666;
}

.auth-footer a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
}

.auth-footer a:hover {
    text-decoration: underline;
}
</style>
{% endblock %}
