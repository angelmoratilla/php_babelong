{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios - Babelong{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>üë• Lista de Usuarios</h1>
    
    <div class="card">
        <h2>Usuarios registrados: {{ total_users }}</h2>
        
        {% if users|length > 0 %}
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr style="background: #f8f9fa; font-weight: bold;">
                            <td>ID</td>
                            <td>Usuario</td>
                            <td>Email</td>
                            <td>Activo</td>
                            <td>Idioma</td>
                            <td>HSK Level</td>
                            <td>Fecha Creaci√≥n</td>
                            <td>√öltimo Acceso</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><strong>{{ user.username ?: 'N/A' }}</strong></td>
                                <td>{{ user.email ?: 'N/A' }}</td>
                                <td>
                                    {% if user.active %}
                                        <span style="color: green;">‚úì S√≠</span>
                                    {% else %}
                                        <span style="color: red;">‚úó No</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.language|upper }}</td>
                                <td>{{ user.hsklevel }}</td>
                                <td>{{ user.creationDate ? user.creationDate|date('d/m/Y') : 'N/A' }}</td>
                                <td>{{ user.accessDate ? user.accessDate|date('d/m/Y') : 'N/A' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="card card-info">
                <p>No hay usuarios registrados en la base de datos.</p>
            </div>
        {% endif %}
    </div>

    <div style="margin: 30px 0;">
        <a href="{{ path('app_database_stats') }}" class="btn btn-primary">
            üìä Ver Estad√≠sticas de la BD
        </a>
        <a href="{{ path('app_home') }}" class="btn btn-success">
            üè† Volver al Inicio
        </a>
    </div>
</div>
{% endblock %}
